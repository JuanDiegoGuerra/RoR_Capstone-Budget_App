<div class="bg-mainBlue text-white w-full h-14 flex place-items-center justify-between px-4">
    <% if left_button == 'Logout' %>
        <%= link_to 'Log Out', destroy_user_session_path, 'data-turbo-method': :delete %>
    <% elsif left_button.present? %>
        <%= link_to left_button do %>
            <button class="mt-2"><%= image_tag('arrow-left.png', alt: 'Back', class: 'h-8') %></button>
        <% end %>
    <% end %>
    <h2><%= page_title %></h2>
    <% if right_button == 'Search' %>
        <%= link_to do %>
          <button class="mt-2 w-10"><%= image_tag('search.png', alt: 'Search', class: 'h-8') %></button>
        <% end %>
    <% elsif right_button %>
        <%= right_button %>
    <% end %>
</div>
<p class="ml-2 text-blue-400"><%= notice %></p>
<p class="ml-2 text-red-400"><%= alert %></p>