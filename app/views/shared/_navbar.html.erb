<div class="bg-mainBlue text-white w-full h-14 flex place-items-center justify-between px-4">
    <% if left_button == 'Logout' %>
        <%= link_to 'Log Out', destroy_user_session_path, 'data-turbo-method': :delete %>
    <% elsif left_button == 'Back' %>
        <%= link_to 'Back', :back %>
    <% else %>
        <div></div>
    <% end %>
    <h2><%= page_title %></h2>
    <% if right_button == 'Search' %>
        <%= link_to 'Search' %>
    <% elsif right_button %>
        <%= right_button %>
    <% else %>
        <div></div>
    <% end %>
</div>